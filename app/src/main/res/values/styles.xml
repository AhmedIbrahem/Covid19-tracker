<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="statisticsCardHeaderStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="fontFamily">@font/tajawalblack</item>
    </style>

    <style name="appTextStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="fontFamily">@font/tajawalblack</item>
        <item name="background">@color/backgroundColor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textHeader" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="fontFamily">@font/tajawalblack</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">14dp</item>
    </style>

    <style name="totalStatisticsBtnStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/tajawalblack</item>
        <item name="background">@color/backgroundColor</item>
        <item name="textAllCaps">false</item>
        <item name="autoSizeMinTextSize">11sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
    </style>


</resources>
